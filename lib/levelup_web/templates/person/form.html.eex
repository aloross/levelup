<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      Oops, something went wrong! Please check the errors below.
    </div>
  <% end %>

  <%= input f, :firstname %>
  <%= input f, :lastname %>
  <%= input f, :identifier %>

  <%= submit "Save", class: "btn btn-primary" %>
<% end %>